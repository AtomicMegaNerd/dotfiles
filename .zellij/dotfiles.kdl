layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
    tab name="neovim" split_direction="vertical" {
        pane command="nvim"
    }
    tab name="shell" split_direction="vertical" {
        pane command="fish"
    }
    tab name="llm" split_direction="vertical" {
        pane command="fish"
    }
}
