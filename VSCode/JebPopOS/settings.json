{
    // =================================================================================
    // AtomicMegaNerd's VSCode Settings
    // =================================================================================
    // =================================================================================
    // ================================================================================= Files
    // settings Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    "files.trimTrailingWhitespace": true,
    // Editor settings
    // =================================================================================
    "editor.fontFamily": "Cascadia Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "blink",
    "editor.minimap.enabled": false,
    // Git settings
    // =================================================================================
    "git.confirmSync": false,
    // Extensions settings
    // =================================================================================
    "extensions.ignoreRecommendations": true,
    // Terminal settings
    // =================================================================================
    "terminal.integrated.fontFamily": "Noto Sans Mono",
    "terminal.integrated.fontSize": 13,
    // Window settings
    // =================================================================================
    "window.zoomLevel": 0,
    "workbench.colorTheme": "GitHub Dark",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.settings.useSplitJSON": true,
    // Explorer settings
    // =================================================================================
    "explorer.confirmDelete": false,
    "explorer.openEditors.visible": 0, // disables open editors
    // Python settings
    // =================================================================================
    "[python]": {
        "editor.rulers": [
            88
        ],
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "python.formatting.provider": "black",
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    // Rust settings
    // =================================================================================
    "[rust]": {
        "editor.rulers": [
            100
        ]
    },
    // Markdown settings
    // =================================================================================
    "[markdown]": {
        "editor.rulers": [
            80
        ]
    },
    // Haskell Settings
    // =================================================================================
    "[haskell]": {
        "editor.tabSize": 2,
        "editor.rulers": [
            90
        ]
    },
    // Disable tracking and telemetry
    // =================================================================================
    "telemetry.enableTelemetry": false,
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "Monokai Classic Monochrome Icons",
    "window.menuBarVisibility": "toggle",
    "workbench.editor.untitled.hint": "hidden"
}